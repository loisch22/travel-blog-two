@model IEnumerable<TravelBlogTwo.Models.Experience>

@{
    ViewData["Table"]= "Experiences";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Experiences</h1>

<table class="table">
    <tr>
		<th>
            @Html.DisplayNameFor(model => model.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Description)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Location.LocationCity)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Location.LocationCountry)
		</th>
	</tr>
	
	@foreach(var listExperience in Model)
	{
     <tr>
		<td>@Html.DisplayFor(model => listExperience.Title)</td>
		<td>@Html.DisplayFor(model => listExperience.Description)</td>
		<td>@Html.DisplayFor(model => listExperience.Location.LocationCity)
        <td>@Html.DisplayFor(model => listExperience.Location.LocationCountry)

		<td>
          @Html.ActionLink("Edit", "Edit", new { id = listExperience.ExperienceId })
        </td>
	 </tr> 
	}
</table>

<p>@Html.ActionLink("Create new entry", "Create")</p>